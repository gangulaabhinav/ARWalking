<PreferenceScreen xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <PreferenceCategory app:title="Settings">
        <Preference
            app:key="permissions"
            app:title="Ensure Permissions"
            />

        <EditTextPreference
            app:key="device_name"
            app:title="Device Name"
            app:useSimpleSummaryProvider="true" />

        <SwitchPreferenceCompat
            app:key="enable_ranging"
            android:title="Enable Ranging in this device"
            app:defaultValue="false"
            />
    </PreferenceCategory>

    <PreferenceCategory app:title="Mode">

        <SwitchPreferenceCompat
            app:key="publish"
            app:title="Publish" />

        <SwitchPreferenceCompat
            app:key="subscribe"
            app:title="Subscribe" />

    </PreferenceCategory>

